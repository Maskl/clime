                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>-->

                <!--ItemContainerStyle="{StaticResource ListBoxItemStyle1}"-->
                 <!--SelectedItem="{Binding SelectedFriend, Mode=TwoWay}"-->
        <!--<ListBox ItemsSource="{Binding Countries}"
                 ItemTemplate="{StaticResource FriendTemplate}"
 
                 Grid.Column="1"
                 Margin="8,49.206,8,8"
                 Grid.ColumnSpan="2"
                 Grid.Row="1" />-->


        <ListBox ItemsSource="{Binding CountriesX}"
                 Grid.Column="1"
                 Margin="8,49.206,8,8"
                 Grid.ColumnSpan="2"
                 Grid.Row="1">

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding FlagImageUrl}" />
                </DataTemplate>
            </ListBox.ItemTemplate>


        </ListBox>


        <chartingToolkit:Chart Margin="8,8,8,37"
                               Title="Chart Title"
                               Grid.Row="1">
            <chartingToolkit:Chart.DataContext>
                <PointCollection>1,10 2,20 3,30 4,40</PointCollection>
            </chartingToolkit:Chart.DataContext>
            <chartingToolkit:ColumnSeries DependentValuePath="X"
                                          IndependentValuePath="Y"
                                          ItemsSource="{Binding}" />
        </chartingToolkit:Chart>

        <Menu Grid.ColumnSpan="2">

            <MenuItem Header="File"
                      Margin="0">
                <MenuItem Header="Close"
                          Click="MenuItem_Click" />
            </MenuItem>

            <MenuItem Header="Measurement"
                      Margin="0"
                      VerticalAlignment="Top"
                      HorizontalContentAlignment="Center">
                <MenuItem Header="Add new"
                          Command="{Binding ShowNewMeasurementViewCommand}" />
                <MenuItem Header="Show all"
                          Command="{Binding ShowAllMeasurementsViewCommand}" />
            </MenuItem>

            <MenuItem Header="Help"
                      Margin="0"
                      VerticalAlignment="Top">
                <MenuItem Header="About"
                          Command="{Binding ShowAboutViewCommand}" />
            </MenuItem>

        </Menu>

    </Grid>
</Window>
