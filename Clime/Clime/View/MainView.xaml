<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:chartingToolkit="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:cmd="clr-namespace:GalaSoft.MvvmLight.Command;assembly=GalaSoft.MvvmLight.Extras"
        xmlns:Model="clr-namespace:Clime.Model" x:Class="Clime.View.MainView"
        mc:Ignorable="d"
        Height="400"
        Width="700"
        
        x:Name="mainWindow"
        
        Title="Clime"
        DataContext="{Binding MainVm, Source={StaticResource Locator}}"
        Icon="/Clime;component/Img/limeico.png">
    
    <Window.Resources>




        <DataTemplate x:Key="FriendTemplate">
            <Grid Height="110"
                  Background="Red">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <!--<Image HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Source="{Binding Model.PictureUri}"
                       Margin="5,5,10,0"
                       Height="100" />-->

                <StackPanel Grid.Column="1">
                    <TextBlock TextWrapping="Wrap"
                               Text="{Binding CountriesCollection.Name}"
                               FontFamily="Segoe UI"
                               FontSize="18" />

                    <TextBlock TextWrapping="Wrap"
                               Text="{Binding Model:CountryRepository.CountriesCollection}"
                               FontFamily="Segoe UI"
                               FontSize="24" />

                    <TextBlock TextWrapping="Wrap"
                               Text="{Binding Model:Country.Name}"
                               FontFamily="Segoe UI"
                               FontSize="18"
                               Foreground="White" />
                </StackPanel>
            </Grid>
        </DataTemplate>













        <DataTemplate x:Key="itemsTemplate">
            <TextBlock HorizontalAlignment="Center"
                       Margin="0,0,0,0"
                       VerticalAlignment="Center"
                       FontSize="14"
                       FontWeight="Bold"
                       TextWrapping="Wrap"
                       Text="{Binding Name}" />
        </DataTemplate>
    </Window.Resources>
    
    <Grid x:Name="LayoutRoot"
          RenderTransformOrigin="0.503,0.557"
          Margin="0,0,0,-0.313">
        

        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <Button Content="Show all measurements"
                Height="25"
                Margin="0,0,162,8"
                VerticalAlignment="Bottom"
                Command="{Binding ShowAllMeasurementsViewCommand}"
                d:LayoutOverrides="VerticalAlignment, Width"
                Width="150"
                HorizontalAlignment="Right"
                Grid.Row="1" />

        <Button Content="Add new measurement"
                HorizontalAlignment="Right"
                Height="25"
                Margin="0,0,8,8"
                VerticalAlignment="Bottom"
                Command="{Binding ShowNewMeasurementViewCommand}"
                Width="150"
                Grid.Row="1"
                d:LayoutOverrides="VerticalAlignment" />

        <TextBlock HorizontalAlignment="Left"
                   Margin="8,8,0,0"
                   TextWrapping="Wrap"
                   Text="Filtering"
                   VerticalAlignment="Top"
                   Grid.Column="1"
                   Grid.Row="1"
                   d:LayoutOverrides="VerticalAlignment" />

        <ComboBox Margin="8,25.277,67,0"
                  RenderTransformOrigin="0.719,-0.329"
                  Height="19.929"
                  VerticalAlignment="Top"
                  d:LayoutOverrides="VerticalAlignment, GridBox, VerticalMargin"
                  Grid.Column="1"
                  Grid.ColumnSpan="2"
                  Grid.Row="1" />

        <ComboBox Margin="0,18.843,8,0"
                  Height="26.363"
                  VerticalAlignment="Top"
                  d:LayoutOverrides="VerticalAlignment, GridBox, VerticalMargin"
                  Grid.Column="2"
                  RenderTransformOrigin="1.978,0.537"
                  HorizontalAlignment="Right"
                  Width="55"
                  Grid.Row="1" />

